<Window x:Class="OnlineRadio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineRadio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Label Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Online Radio" FontSize="30" Foreground="White"></Label>
       
        <Image Source="Images\EarPhones.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="70"></Image>
        <Button Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" >
        <Image Source="Images\Arrow_Right.png" Margin="5" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Image>
        </Button>
        <Button Click="Button_Click_1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top">
        <Image Source="Images\Info.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60"></Image>
        </Button>

    </Grid>
</Window>
